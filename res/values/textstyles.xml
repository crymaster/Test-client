<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextMoney" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:drawableRight">@drawable/icon_coin_xeeng</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextMoney.XeengCoin"></style>

    <style name="TextMoney.XeengCoin.Golden">
        <item name="android:textColor">#FFE46D</item>
    </style>

    <style name="TextMoney.GoldCoin">
        <item name="android:textSize">16sp</item>
        <item name="android:drawableRight">@drawable/icon_coin_gold</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="TextMoney.GoldCoin.HomeTable">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>

    <style name="TextMoney.GoldCoin.Golden">
        <item name="android:textColor">#FFE46D</item>
    </style>

    <style name="TextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextLabel.Golden">
        <item name="android:textColor">#FFE46D</item>
    </style>

    <style name="TextLabel.Login">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabel.Register" parent="TextLabel.Login"></style>

    <style name="TextLabel.HomeTable">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>

    <style name="TextLabel.SettingCell">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/setting_cell</item>
    </style>

    <style name="TextLabel.Profile">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextLabel.Profile.Golden" parent="TextLabel.Golden">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextLabel.ProfileName">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:background">@drawable/player_info_cell_name</item>
        <item name="android:textColor">#FFE46D</item>
    </style>

</resources>