<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_chat_message_item_width"
    android:layout_height="@dimen/dialog_chat_message_item_height" >

    <ImageView
        android:id="@+id/iv_dialog_chat_message_item_emoticon"
        android:layout_width="@dimen/dialog_chat_message_item_width"
        android:layout_height="@dimen/dialog_chat_message_item_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/chat_suggest_bg" />

    <TextView
        android:id="@+id/tv_dialog_chat_message_item_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_dialog_chat_message_item_emoticon"
        android:layout_alignLeft="@+id/iv_dialog_chat_message_item_emoticon"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/iv_dialog_chat_message_item_emoticon"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_dialog_chat_message_item_msg_text_size" />

</RelativeLayout>