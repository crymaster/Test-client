<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_popup_bottom"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rg_event_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/rb_event_participate"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="10dp" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rb_event_description"
            style="@style/EventTab.Smaller"
            android:layout_gravity="center_vertical"
            android:text="Nội dung" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rb_event_participate"
            style="@style/EventTab.Smaller"
            android:layout_gravity="center_vertical"
            android:text="Tham gia" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rb_event_history"
            style="@style/EventTab.Smaller"
            android:layout_gravity="center_vertical"
            android:text="Lịch sử" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_event_tabbed_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >
    </FrameLayout>

</LinearLayout>