<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@null"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_profile_gold"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/default_username"
        android:textColor="@android:color/white"
        android:textSize="@dimen/xeeng_profile_username_textSize" />

    <TextView
        android:id="@+id/tv_profile_gold"
        style="@style/TextMoney.GoldCoin.Golden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/default_cash_value" />

    <TextView
        android:id="@+id/tv_profile_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_profile_username"
        android:layout_marginRight="5dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="N/A"
        android:textColor="#FFEB96"
        android:textSize="15sp"
        android:textStyle="bold" />

    

</RelativeLayout>