<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal_bg" >

    <RelativeLayout
        android:id="@+id/rl_slot_machine_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/drawable_title_bg_repeat_slot"
        android:paddingBottom="@dimen/xeeng_ui_topbar_vertical_padding"
        android:paddingLeft="@dimen/xeeng_ui_topbar_horizontal_padding"
        android:paddingRight="@dimen/xeeng_ui_topbar_horizontal_padding"
        android:paddingTop="@dimen/xeeng_ui_topbar_vertical_padding" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_slot"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/imv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/layer_list_top_title_slot_bg"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="@dimen/xeeng_ui_topbar_title_maxWidth"
            android:minWidth="@dimen/xeeng_ui_topbar_title_minWidth"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/text_title_slot" />

        <Button
            android:id="@+id/btn_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_tip_slot"
            android:scaleType="fitXY"
            android:visibility="visible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imv_title_bg2_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_slot_machine_topbar"
        android:scaleType="fitXY"
        android:src="@drawable/title_bg2_slot" />

    <RelativeLayout
        android:id="@+id/rl_slot_machine_main"
        android:layout_width="468dp"
        android:layout_height="209dp"
        android:layout_centerInParent="true"
        android:background="@drawable/led_slot_bg" >

        <ImageView
            android:id="@+id/imv_leds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/led_slot_leds1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_slot_machine_main_left"
                android:layout_width="186dp"
                android:layout_height="186dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/imv_machine_slot_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_slot_bg"
                            android:src="@drawable/items_slot1" />

                        <ImageView
                            android:id="@+id/imv_machine_slot_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/item_slot_bg"
                            android:src="@drawable/items_slot2" />

                        <ImageView
                            android:id="@+id/imv_machine_slot_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/item_slot_bg"
                            android:src="@drawable/items_slot3" />

                        <ImageView
                            android:id="@+id/imv_machine_slot_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/item_slot_bg"
                            android:src="@drawable/items_slot8" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/imv_machine_slot_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/item_slot_bg"
                            android:src="@drawable/items_slot4" />

                        <ImageView
                            android:id="@+id/imv_machine_slot_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/item_slot_bg"
                            android:src="@drawable/items_slot5" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/imv_machine_slot_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/item_slot_bg"
                            android:src="@drawable/items_slot5" />

                        <ImageView
                            android:id="@+id/imv_machine_slot_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/item_slot_bg"
                            android:src="@drawable/items_slot4" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/imv_machine_slot_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_slot_bg"
                            android:src="@drawable/items_slot7" />

                        <ImageView
                            android:id="@+id/imv_machine_slot_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/item_slot_bg"
                            android:src="@drawable/items_slot6" />

                        <ImageView
                            android:id="@+id/imv_machine_slot_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/item_slot_bg"
                            android:src="@drawable/items_slot2" />

                        <ImageView
                            android:id="@+id/imv_machine_slot_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/item_slot_bg"
                            android:src="@drawable/items_slot1" />
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="2dp" >

                    <LinearLayout
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:layout_centerInParent="true"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="3dp"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="V1"
                                    android:textColor="#FFE865" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="V2"
                                    android:textColor="#FFE865" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="V3"
                                    android:textColor="#FFE865" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="1dp"
                                android:paddingRight="1dp" >

                                <ImageView
                                    android:id="@+id/imv_machine_slot_reward_1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/item_slot_bg_small"
                                    android:src="@drawable/items_slot1" />

                                <ImageView
                                    android:id="@+id/imv_machine_slot_reward_2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/item_slot_bg_small"
                                    android:src="@drawable/items_slot2" />

                                <ImageView
                                    android:id="@+id/imv_machine_slot_reward_3"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/item_slot_bg_small"
                                    android:src="@drawable/items_slot3" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_slot_machine_multiplier"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:text="x0.75"
                            android:textColor="#FFD900"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </FrameLayout>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/fl_event_details"
                android:layout_width="260dp"
                android:layout_height="186dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="274" />
        </LinearLayout>
    </RelativeLayout>

    <include
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/xeeng_ui_home_bottombar" />

</RelativeLayout>