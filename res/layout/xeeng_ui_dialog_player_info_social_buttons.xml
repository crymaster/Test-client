<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/btn_faceBook"
        android:layout_width="@dimen/xeeng_player_info_social_btn_width"
        android:layout_height="match_parent"
        android:padding="@dimen/xeeng_player_info_social_btn_padding"
        android:src="@drawable/btn_facebook2"
        android:text="@string/label_xephangthangthua" />

    <ImageView
        android:id="@+id/btn_twitter"
        android:layout_width="@dimen/xeeng_player_info_social_btn_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/xeeng_social_button_gap"
        android:padding="@dimen/xeeng_player_info_social_btn_padding"
        android:src="@drawable/btn_twitter"
        android:text="@string/label_xephangthangthua" />

    <ImageView
        android:id="@+id/btn_googleplus"
        android:layout_width="@dimen/xeeng_player_info_social_btn_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/xeeng_social_button_gap"
        android:padding="@dimen/xeeng_player_info_social_btn_padding"
        android:src="@drawable/btn_google_plus" />

    <ImageView
        android:id="@+id/btn_googlemail"
        android:layout_width="@dimen/xeeng_player_info_social_btn_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/xeeng_social_button_gap"
        android:padding="@dimen/xeeng_player_info_social_btn_padding"
        android:src="@drawable/btn_email" />

</LinearLayout>