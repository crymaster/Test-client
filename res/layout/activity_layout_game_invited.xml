<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/xeeng_list_item_padding"
    android:paddingTop="@dimen/xeeng_list_item_padding" >
  <TextView
        android:id="@+id/txtindex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.28"
        android:gravity="left"
        android:text="@string/default_index_name"
        android:textSize="@dimen/xeeng_list_item_textSize"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.28"
        android:gravity="left"
        android:text="@string/default_index_name"
        android:textSize="@dimen/xeeng_list_item_textSize"
        android:textColor="@android:color/white" />
    
    <TextView
        android:id="@+id/txtCashValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:gravity="center"
        android:text="@string/default_cash_value"
        android:textSize="@dimen/xeeng_list_item_textSize"
        android:textColor="@android:color/white" />
 

</LinearLayout>