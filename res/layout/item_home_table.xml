<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:background="@drawable/home_table_cell"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txt_index"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:text="10"
        android:textColor="@color/pink"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/home_table_cell_seperate" />

    <LinearLayout
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:gravity="center" >

        <include
            android:layout_width="30dp"
            android:layout_height="30dp"
            layout="@layout/xeeng_ui_avatar" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/home_table_cell_seperate" />

    <TextView
        android:id="@+id/txt_player_name"
        style="@style/TextLabel.HomeTable"
        android:layout_width="@dimen/item_home_table_txt_player_name_width"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/home_table_cell_seperate" />

    <TextView
        android:id="@+id/txt_player_gold"
        style="@style/TextMoney.GoldCoin.HomeTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="330M" />

</LinearLayout>