<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/friend_list_item_background_normal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_mail_item_avatar"
        android:layout_width="@dimen/xeeng_fragment_user_info_mail_avatar_width"
        android:layout_height="@dimen/xeeng_fragment_user_info_mail_avatar_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="1dp"
        android:src="@drawable/avatar_default"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/ib_mail_item_delete"
        android:layout_toRightOf="@+id/iv_mail_item_avatar"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Nguyen: Hello" />

        <TextView
            android:id="@+id/tv_date_sent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:24" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_mail_item_delete"
        android:layout_width="@dimen/xeeng_fragment_user_info_mail_delete_width"
        android:layout_height="@dimen/xeeng_fragment_user_info_mail_delete_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:background="@null"
        android:src="@drawable/btn_close" />

</RelativeLayout>