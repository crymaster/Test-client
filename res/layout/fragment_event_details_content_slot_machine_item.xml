<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_slot_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/items_slot1" />

        <ImageView
            android:id="@+id/iv_slot_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/items_slot2" />

        <ImageView
            android:id="@+id/iv_slot_item_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/items_slot3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/tv_slot_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1.5"
            android:textColor="#FFD900"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>