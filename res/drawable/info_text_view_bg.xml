<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <bitmap
            android:gravity="left"
            android:src="@drawable/info_text_view_left" />
    </item>
    <item>
        <bitmap
            android:gravity="right"
            android:src="@drawable/info_text_view_right" />
    </item>
    <item
        android:left="10dp"
        android:right="10dp">
        <bitmap
            android:src="@drawable/info_text_view_center"
            android:tileMode="repeat" />
    </item>

</layer-list>