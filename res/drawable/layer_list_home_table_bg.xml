<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <bitmap
            android:gravity="left|fill_vertical"
            android:src="@drawable/home_table_bg_left" />
    </item>
    <item>
        <bitmap
            android:gravity="right|fill_vertical"
            android:src="@drawable/home_table_bg_right" />
    </item>
    <item
        android:left="3dp"
        android:right="3dp">
        <bitmap
            android:gravity="fill"
            android:src="@drawable/home_table_bg_center" />
    </item>

</layer-list>