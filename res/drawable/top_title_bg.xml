<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <bitmap
            android:gravity="left"
            android:src="@drawable/top_title_bg_left" />
    </item>
    <item>
        <bitmap
            android:gravity="right"
            android:src="@drawable/top_title_bg_right" />
    </item>
    <item
        android:left="15dp"
        android:right="16dp">
        <bitmap
            android:src="@drawable/top_title_bg_center"
            android:tileMode="repeat" />
    </item>
</layer-list>