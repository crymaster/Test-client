<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <bitmap
            android:gravity="top|fill_horizontal"
            android:src="@drawable/chat_box_bg_top" />
    </item>
    <item>
        <bitmap
            android:gravity="bottom|fill_horizontal"
            android:src="@drawable/chat_box_bg_bottom" />
    </item>
    <item
        android:bottom="2dp"
        android:top="2dp">
        <bitmap android:src="@drawable/chat_box_bg_center" />
    </item>

</layer-list>